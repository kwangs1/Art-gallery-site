<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.admin.notice">

		<resultMap id="noticeResult" type="NoticeVO">
		<result property="bno" column="bno" />
		<result property="title" column="title" />
		<result property="content" column="content" />
		<result property="department" column="department" />
		<result property="tel" column="tel" />
		<result property="writer" column="writer" />
		<result property="regdate" column="regdate" />
	</resultMap>

<select id="selectAllNoticeList" resultMap="noticeResult" >
	<![CDATA[
		select bno,title,department,regdate from notice_board
		order by bno desc
	]]>
</select>

<insert id="insertNoticeList" parameterType="NoticeVO">
	<selectKey resultType="int" keyProperty="bno" order="BEFORE">
		select seq_notice_id.nextval from dual
	</selectKey>
	<![CDATA[
		insert into notice_board(bno, title, content, department , tel, writer, regdate)
			values(#{bno},#{title},#{content},#{department},#{tel}, #{writer}, sysdate)
	]]>
</insert>

<select id="selectNoticeDetail" resultMap="noticeResult"  parameterType="int">
	<![CDATA[
		select * from notice_board
		where bno = #{bno}
	]]>
</select>
</mapper>