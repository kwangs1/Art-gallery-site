<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.admin.notice">

	<resultMap id="noticeResult" type="NoticeVO">
		<result property="bno" column="bno" />
		<result property="title" column="title" />
		<result property="content" column="content" />
		<result property="department" column="department" />
		<result property="tel" column="tel" />
		<result property="writer" column="writer" />
		<result property="hit" column="hit" />
		<result property="regDate" column="regDate" />
		<result property="startDate" column="startDate" />
		<result property="endDate" column="endDate" />
	</resultMap>


 <select id="selectAllNoticeList" resultMap="noticeResult" parameterType="java.util.Map">
	<![CDATA[
			SELECT  bno, 
		        title, 
		        department,
		        regDate, 
		        hit
		 FROM ( 
		        SELECT bno, 
		               title, 
		               department, 
		               regDate, 
		               hit, 
		               ROW_NUMBER() OVER(ORDER BY BNO DESC) AS RNUM
		         FROM notice_board 
		                       ) Notice
		WHERE RNUM BETWEEN #{rowStart} AND #{rowEnd}
		ORDER BY BNO DESC
	]]>
</select>

<select id="countNoticeList"  resultType="Integer">
    	<![CDATA[
    		SELECT
    			count(*)
    		FROM
    			notice_board
    	]]>
    </select>


<insert id="insertNoticeList" parameterType="NoticeVO">
	<selectKey resultType="int" keyProperty="bno" order="BEFORE">
		select seq_notice_id.nextval from dual
	</selectKey>
	<![CDATA[
		insert into notice_board(bno, title, content, department , tel, writer, regDate)
			values(#{bno},#{title},#{content},#{department},#{tel}, #{writer}, sysdate)
	]]>
</insert>

<select id="selectNoticeDetail" resultMap="noticeResult"  parameterType="int">
	<![CDATA[
		select * from notice_board
		where bno = #{bno}
	]]>
</select>

<delete id="deleteNoticeList" parameterType="int">
	<![CDATA[
		delete from notice_board
		where bno = #{bno}
	]]>
</delete>

<update id="modifyNotice" parameterType="NoticeVO">
	<![CDATA[
		update notice_board
		set title=#{title}, content=#{content}
		where bno=#{bno}
	]]>
</update>

<update id="boardHit" parameterType="int">
	<![CDATA[
		update notice_board
		set hit = hit+1
		where bno=#{bno}
	]]>
</update>

<select id="selectKeywordSearch" resultType="String" parameterType="String">
	<![CDATA[
		select title from notice_board
		where
		title like '%'||#{keyword}||'%'
		order by regDate desc
	]]>
</select>

<select id="selectNoticeBySearchWord" resultMap="noticeResult" parameterType="String">
